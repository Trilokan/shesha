<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">

        <!--Invoice-->
        <record id="invoice_purchase_sequence" model="ir.sequence">
            <field name="name">Purchase Invoice</field>
            <field name="code">invoice.purchase_bill</field>
            <field name="padding">6</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <record id="invoice_direct_purchase_sequence" model="ir.sequence">
            <field name="name">Direct Purchase Invoice</field>
            <field name="code">invoice.purchase_return_bill</field>
            <field name="padding">6</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

    </data>

</odoo>