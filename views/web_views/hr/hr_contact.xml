<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_hos_contact_tree" model="ir.ui.view">
        <field name="name">hos.contact.tree</field>
        <field name="model">hos.contact</field>
        <field name="arch" type="xml">
            <tree string="Contact">
                <field name="employee_id"/>
                <field name="name"/>
                <field name="relation"/>
                <field name="door_no"/>
                <field name="building_name"/>
                <field name="street_1"/>
                <field name="street_2"/>
                <field name="locality"/>
                <field name="city"/>
                <field name="landmark"/>
                <field name="pin_code"/>
                <field name="state_id"/>
                <field name="country_id"/>
                <field name="mobile"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hos_contact_form" model="ir.ui.view">
        <field name="name">hos.contact.form</field>
        <field name="model">hos.contact</field>
        <field name="arch" type="xml">
            <form string="Family/Relation Details">
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="name"/>
                        <field name="relation"/>
                        <field name="door_no"/>
                        <field name="building_name"/>
                        <field name="street_1"/>
                        <field name="street_2"/>
                        <field name="locality"/>
                        <field name="city"/>
                        <field name="landmark"/>
                        <field name="pin_code"/>
                        <field name="state_id"/>
                        <field name="country_id"/>
                        <field name="mobile"/>
                        <field name="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hos_contact" model="ir.actions.act_window">
        <field name="name">Contact</field>
        <field name="res_model">hos.contact</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
