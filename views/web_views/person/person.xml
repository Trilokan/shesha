    <!-- Action supplier -->
    <record id="action_hos_person_supplier" model="ir.actions.act_window">
        <field name="name">Supplier</field>
        <field name="res_model">hos.person</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
