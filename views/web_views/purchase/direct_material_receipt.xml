<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_hos_picking_direct_material_receipt_tree" model="ir.ui.view">
        <field name="name">hos.picking.tree</field>
        <field name="model">hos.picking</field>
        <field name="arch" type="xml">
            <tree string="Direct Material Receipt">
                <field name="date"/>
                <field name="name"/>
                <field name="reference"/>
                <field name="picking_type"/>
                <field name="name"/>
                <field name="progress"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hos_picking_direct_material_receipt_form" model="ir.ui.view">
        <field name="name">hos.picking.form</field>
        <field name="model">hos.picking</field>
        <field name="arch" type="xml">
            <form string="Direct Material Receipt">
                <sheet>
                    <div id="s_header">
                        <h1>Direct Material Receipt</h1>
                    </div>
                    <field name="progress" widget="statusbar" style="float: right;padding: 20px;"/>
                    <h2><field name="name" readonly="1"/></h2>
                    <group col="4">
                        <field name="date" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="person_id" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="picking_type" invisible="1"/>
                        <field name="source_location_id" invisible="1"/>
                        <field name="destination_location_id" invisible="1"/>
                        <field name="picking_category" invisible="1"/>
                        <field name="is_invoice_created" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="Material Detail">
                            <field name="picking_detail"
                                   context="{'source_location_id': source_location_id,
                                             'destination_location_id': destination_location_id,
                                             'picking_type': picking_type,
                                             'date': date}"
                                   attrs="{'readonly': [('progress', '!=', 'draft')]}">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="uom_id"/>
                                    <field name="quantity" string="Quantity"/>
                                    <field name="progress" invisible="1"/>
                                    <field name="date" invisible="1"/>
                                    <field name="source_location_id" invisible="1"/>
                                    <field name="destination_location_id" invisible="1"/>
                                    <field name="picking_type" invisible="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="product_id" required="1"
                                               domain="[('category_id.name', 'in', ['Medicine', 'Equipment'])]"/>
                                        <field name="uom_id" readonly="1"/>
                                        <field name="quantity" string="Accepted Quantity" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                                        <field name="progress" invisible="1"/>
                                        <field name="is_batch" invisible="1"/>
                                        <field name="date" invisible="1"/>
                                        <field name="source_location_id" invisible="1"/>
                                        <field name="destination_location_id" invisible="1"/>
                                        <field name="picking_type" invisible="1"/>
                                    </group>
                                    <field name="dummy_batch_ids"
                                           attrs="{'invisible': [('is_batch', '=', False)], 'readonly': [('progress', '!=', 'draft')]}">
                                        <tree editable="bottom">
                                            <field name="batch_no"/>
                                            <field name="manufactured_date"/>
                                            <field name="expiry_date"/>
                                            <field name="mrp_rate"/>
                                            <field name="unit_price"/>
                                            <field name="quantity"/>
                                        </tree>
                                    </field>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="trigger_move" string="Accept" type="object"
                                attrs="{'invisible': [('progress', '!=', 'draft')]}"/>
                        <button name="trigger_create_direct_purchase_invoice"
                                string="Create Invoice" type="object"
                                attrs="{'invisible': ['|',('progress', '=', 'draft'),('is_invoice_created','!=',False)]}"/>
                    </footer>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action GRN-->
    <record id="action_hos_picking_direct_material_receipt" model="ir.actions.act_window">
        <field name="name">Direct Material Receipt</field>
        <field name="res_model">hos.picking</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('picking_category', '=', 'direct_material_receipt')]</field>
        <field name="context">{'default_picking_category': 'direct_material_receipt', 'default_picking_type': 'in'}</field>
        <field name="view_id" ref="view_hos_picking_direct_material_receipt_tree"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_hos_picking_direct_material_receipt_form">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hos_picking_direct_material_receipt_form" />
        <field name="act_window_id" ref="action_hos_picking_direct_material_receipt"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_hos_picking_direct_material_receipt_tree">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_hos_picking_direct_material_receipt_tree"/>
        <field name="act_window_id" ref="action_hos_picking_direct_material_receipt"/>
    </record>

</odoo>

